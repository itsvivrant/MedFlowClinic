div(class='question-list-container')
    div(class='question-list-box')
        div(class='question-list-header-box')
            h1.question-form-header Questions
        ul(class='questions-list')
            each question in questions
                li.question-info-box
                    div(class='qs-stats-container')
                        div(class='qs-votes-container')
                            if locals.authenticated
                                form(action='/voting/upvote/question' method='PATCH')
                                    button(id=`question-upvote-${question.id}` type="button" class="question-upvote-button") Up Vote
                            span(id=`question-counter-${question.id}` class='votes-number') #{question.voteCount}
                            if locals.authenticated
                                form(action='/voting/downvote/question' method='PATCH')
                                    button(id=`question-downvote-${question.id}` type="button" class="question-downvote-button") Down Vote
                    div(class='question-info')
                            a(class="question" href=`/questions/${question.id}`) #{question.question}
